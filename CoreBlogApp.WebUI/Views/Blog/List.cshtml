@model  IEnumerable<Blog>
@{
    ViewData["Title"] = "List";
}

<div class="container mt-3">
    <h2>Blog List</h2>
    <hr />
    <div class="row">
        <div class="col">
            @if(Model.Count() > 0)
            {
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Image</th>
                            <th>Title</th>
                            <th>Date</th>
                            <th>Is Approved</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@item.BlogId</td>
                            <td>
                                <img src="~/img/@item.Image" width="100" height="100" />
                            </td>
                            <td>@item.Title</td>
                            <td>@item.Date</td>
                            <td>
                                @if (@item.IsApproved)
                                {
                                    <i class="fa fa-check" aria-hidden="true"> </i>
                                }
                                else
                                {
                                    <i class="fa fa-times" aria-hidden="true"> </i>
                                }

                            </td> 
                            <td>
                                @Html.ActionLink("Details", "Details", "Blog", new { id = item.BlogId }, new { @class = "btn btn-primary btn-sm" })
                                @Html.ActionLink("Delete", "Delete", "Blog", new { id = item.BlogId }, new { @class = "btn btn-danger btn-sm" })
                                @*<a class="" btn btn-primary btn-sm" asp-controller="Blog" asp-action="Delete" asp-route="@item.Id">Delete</a>*@
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-danger">
                    Blog not found
                </div>
            }

        </div>

    </div>

</div>


